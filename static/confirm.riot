<confirm>
  <div class="message-screen" show={dialogShowing} onclick={closeDialog}>
    <div class="confirm">
      <p class="message-text">{ state.message }</p>
      <p class="button-left">
        <button onclick={ ok }>OK</button>
      </p>
      <p class="button-right">
        <button onclick={ cancel }>Cancel</button>
      </p>
    </div>
  </div>

  <script>
    export default {
      onBeforeMount(props, state) {
        this.state = {
          message: props.message,
          onOK: props.onOK,
        }
      },
      cancel(e) {
        e.preventDefault()
        this.unmount('confirm', true)
      },
      ok(e) {
        e.preventDefault()
        this.unmount('confirm', true)
        this.state.onOK();
      }
    }
  </script>
</confirm>

